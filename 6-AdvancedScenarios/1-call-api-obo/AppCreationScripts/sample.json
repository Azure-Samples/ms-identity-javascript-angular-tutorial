{
    "Sample": {
        "Author": "derisen",
        "Title": "Angular single-page application authorizing a .NET Core web API to call Microsoft Graph using on-behalf-of flow",
        "Level": 300,
        "Client": "Angular SPA",
        "Service": ".NET Core web API",
        "RepositoryUrl": "ms-identity-javascript-angular-tutorial",
        "Endpoint": "AAD v2.0",
        "Platform": "javascript",
        "Languages": [
            "typescript",
            "csharp"
        ],
        "Products": [
            "azure-active-directory",
            "msal-js",
            "msal-angular",
            "microsoft-identity-web"
        ],
        "Description": "An Angular single-page application authorizing a .NET Core web API to call Microsoft Graph using on-behalf-of flow"
    },
    "ReadmeSetup": {
        "CertificateOption": "1"
    },
    "AADApps": [
        {
            "Id": "service",
            "Name": "ProfileAPI",
            "Kind": "WebApi",
            "Audience": "AzureADMyOrg",
            "SampleSubPath": "6-AdvancedScenarios\\1-call-api-obo\\API",
            "PasswordCredentials": "Auto",
            "Scopes": [
                "access_as_user"
            ],
            "RequiredResourcesAccess": [
                {
                    "Resource": "Microsoft Graph",
                    "DelegatedPermissions": [
                        "User.Read",
                        "offline_access"
                    ]
                }
            ],
            "OptionalClaims": {
                "AccessTokenClaims": [
                    "idtyp",
                    "acct"
                ]
            }
        },
        {
            "Id": "client",
            "Name": "ProfileSPA",
            "Kind": "SinglePageApplication",
            "Audience": "AzureADMyOrg",
            "HomePage": "http://localhost:4200",
            "ReplyUrls": "http://localhost:4200, http://localhost:4200/auth",
            "SampleSubPath": "6-AdvancedScenarios\\1-call-api-obo\\SPA",
            "RequiredResourcesAccess": [
                {
                    "Resource": "service",
                    "DelegatedPermissions": [
                        "access_as_user"
                    ]
                }
            ],
            "OptionalClaims": {
                "AccessTokenClaims": [
                    "acct"
                ]
            }
        }
    ],
    "CodeConfiguration": [
        {
            "App": "service",
            "SettingKind": "Replace",
            "SettingFile": "\\..\\API\\ProfileAPI\\appsettings.json",
            "Mappings": [
                {
                    "key": "Enter the client Secret",
                    "value": "service.AppKey"
                },
                {
                    "key": "Enter the client ID (aka 'Application ID')",
                    "value": ".AppId"
                },
                {
                    "key": "Enter the tenant ID",
                    "value": "$tenantId"
                }
            ]
        },
        {
            "App": "client",
            "SettingKind": "Replace",
            "SettingFile": "\\..\\SPA\\src\\app\\auth-config.ts",
            "Mappings": [
                {
                    "key": "Enter_the_Application_Id_Here",
                    "value": ".AppId"
                },
                {
                    "key": "Enter_the_Tenant_Info_Here",
                    "value": "$tenantId"
                },
                {
                    "key": "Enter_the_Web_Api_Application_Id_Here",
                    "value": "service.AppId"
                }
            ]
        }
    ]
}